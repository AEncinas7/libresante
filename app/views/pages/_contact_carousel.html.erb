<div class="owl-two owl-carousel owl-theme contacts">
  <div class="card-contact">
    <div class="details">
      <%= cl_image_tag("Jorge_fvpyuo.png", :aspect_ratio=>"1:1", :border=>"0px_solid_rgb:ffffff", :gravity=>"face:center", :quality=>100, :radius=>"max", :width=>1000, :crop=>"fill") %>
      <p class="name">Jorge Gavilano Frantzen</p>
      <p class="role"><%= t('pages.home.jorge_role') %></p>
    </div>
    <div class="text">
      <div class="content">
        <p><%= t('pages.home.jorge_content_1') %></p>
        <p><%= t('pages.home.jorge_content_2') %></p>
      </div>
      <div class="contact-btn">
        <div class="btnbtn">
          <%= link_to "#{t('general_contact_btn')}", "#", class: "word", data: { toggle: "modal", target: "#jorge" } %>
          <i class="fas fa-chevron-right"></i>
        </div> 
      </div>
    </div>
  </div>

  <div class="card-contact">
    <div class="details">
      <%= cl_image_tag("Renato_ysjybv.png", :transformation=> [{:width=>450, :height=>450, :gravity=>"face", :radius=>"max", :crop=>"crop"}, {:width=>200, :crop=>"scale"}]) %>
      <p class="name">Renato Tuesta Vilca</p>
      <p class="role"><%= t('pages.home.renato_role') %></p>  
    </div>
    <div class="text">
      <div class="content">
        <p><%= t('pages.home.renato_content') %></p>
      </div>
      <div class="contact-btn">
        <div class="btnbtn">
          <%= link_to "#{t('general_contact_btn')}", "#", class: "word", data: { toggle: "modal", target: "#renato" } %>
          <i class="fas fa-chevron-right"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modals -->
<div class="modal fade" id="renato" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered contact-dialog">
      <div class="modal-content contact-content">
        <div class="contact-modal-header">
          <p><%= t('pages.home.contact_modal_title') %></p>
          <button type="button" class="close contact-close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="contact-modal-body">
          <div class="contact-img">
            <%= cl_image_tag("Renato_ysjybv.png", :transformation=> [{:width=>450, :height=>450, :gravity=>"face", :radius=>"max", :crop=>"crop"}, {:width=>150, :crop=>"scale"}]) %>
          </div>
          <div class="contact-details">
            <p class="contact-role"><%= t('pages.home.renato_role') %></p>
            <p class="contact-name">Renato Tuesta Vilca</p>
            <p class="contact-email">renatotuesta.vilca@libresante.com</p>
          </div>
        </div>
      </div>
  </div>
</div>

